<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
    xmlns="http://javafx.com/javafx/25"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.mycompany.mavenproject3.ManagePaymentsController"
    prefHeight="450" prefWidth="700">

    <TableView fx:id="paymentsTable" layoutX="0" layoutY="0" prefHeight="380" prefWidth="700">
        <columns>
            <TableColumn fx:id="paymentIdCol" text="Payment ID" prefWidth="80"/>
            <TableColumn fx:id="methodCol" text="Method" prefWidth="80"/>
            <TableColumn fx:id="appointmentIdCol" text="Appointment ID" prefWidth="110"/>
            <TableColumn fx:id="amountCol" text="Amount" prefWidth="90"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="90"/>
            <TableColumn fx:id="prescNameCol" text="Prescription Name" prefWidth="120"/>
            <TableColumn fx:id="prescFreqCol" text="Frequency" prefWidth="80"/>
            <TableColumn fx:id="prescPriceCol" text="Price" prefWidth="80"/>
        </columns>
    </TableView>

    <Button layoutX="10" layoutY="390" text="Add" onAction="#handleAdd"/>
    <Button layoutX="90" layoutY="390" text="Delete" onAction="#handleDelete"/>
    <Button layoutX="180" layoutY="390" text="Refund" onAction="#handleRefund"/>
</AnchorPane>
