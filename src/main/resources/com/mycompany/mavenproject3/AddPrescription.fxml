<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane
    xmlns="http://javafx.com/javafx/25"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.mycompany.mavenproject3.AddPrescriptionController"
    prefHeight="364" prefWidth="710">

    <Label layoutX="240" layoutY="5" text="Add Prescription" textFill="#bf1306">
        <font>
            <Font size="24"/>
        </font>
    </Label>

    <Separator layoutY="35" prefWidth="710"/>

    <GridPane layoutX="160" layoutY="90" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="250"/>
        </columnConstraints>

        <Label text="Name"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1"/>

        <Label text="Frequency" GridPane.rowIndex="1"/>
        <TextField fx:id="freqField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Price" GridPane.rowIndex="2"/>
        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Button text="Save"
                onAction="#handleSave"
                GridPane.rowIndex="3"/>

        <Button text="Cancel"
                onAction="#handleCancel"
                GridPane.columnIndex="1"
                GridPane.rowIndex="3"/>
    </GridPane>
</AnchorPane>
