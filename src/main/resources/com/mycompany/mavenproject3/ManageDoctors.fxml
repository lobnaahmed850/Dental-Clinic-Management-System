            <TableColumn fx:id="firstNameCol" prefWidth="90" text="First Name" />
            <TableColumn fx:id="lastNameCol" prefWidth="90" text="Last Name" />
            <TableColumn fx:id="emailCol" prefWidth="120" text="Email" />
            <TableColumn fx:id="idCol" prefWidth="60" text="ID" />
            <TableColumn fx:id="specializationCol" prefWidth="130" text="Specialization" />
            <TableColumn fx:id="feesCol" prefWidth="70" text="Fees" />
            <TableColumn fx:id="roomCol" prefWidth="61.0" text="Room" />
            <TableColumn fx:id="statusCol" prefWidth="99.0" text="Status" />
        </columns>
    </TableView>

    <!-- Buttons -->
    <Button layoutX="10.0" layoutY="390.0" onAction="#handleAdd" prefHeight="30" prefWidth="80" text="Add" />
    <Button layoutX="110.0" layoutY="390.0" onAction="#handleDelete" prefHeight="30" prefWidth="80" text="Delete" />
</AnchorPane>
